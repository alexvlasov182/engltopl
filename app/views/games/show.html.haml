.jumbotron.text-center
  %h1.display-4= @word.content
  = simple_form_for :answer, url: answers_path, method: :post, remote: true do |f|
    = f.input :content, label: false, as: :string, input_html: { autocomplete: 'off', autofocus: true }
    = f.input :word_id, as: :hidden, input_html: { value: @word.id }
    = f.input :game_id, as: :hidden, input_html: { value: @game.id }
    = f.submit 'Check answer', as: :stirng, class: 'btn btn-primary btn-lg'
  %p
    %table.table
      %thead
        %tr
          %th.table-success Good Answers
          %th.table-danger Bad Answers
      %tbody
        %tr
          %td.table-success= @game.good_answers_count
          %td.table-danger= @game.bad_answers_count


